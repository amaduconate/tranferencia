model currency {  
  id Int @id @default(autoincrement())

  rubles Float
}

model commission {
  id Int @id @default(autoincrement())
  
  fromEur Float
  fromRub Float
  fromXof Float
}

model commissionPartnership {
  id Int @id @default(autoincrement())
  
  fromEurPartnership Float
  fromRubPartnership Float
  fromXofPartnership Float
}

model exchange_rate {
  id Int @id @default(autoincrement())

  fromEur Float
  fromRub Float
  fromXof Float
}